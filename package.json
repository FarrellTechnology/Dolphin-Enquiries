{
    "name": "dolphin-enquiries-tray",
    "version": "1.0.8",
    "main": "dist/main.js",
    "description": "A simple Electron app to send email notifications for Dolphin Enquiries.",
    "author": {
        "name": "Farrell Technology LTD",
        "email": "office@farrelltech.org",
        "url": "https://farrelltech.org"
    },
    "scripts": {
        "start": "tsc && electron .",
        "build": "rimraf out && rimraf dist && tsc && electron-builder"
    },
    "build": {
        "appId": "org.farrelltech.dolphinenquiries",
        "productName": "Dolphin Enquiries",
        "asar": true,
        "files": [
            "dist/**/*",
            "package.json"
        ],
        "extraResources": [
            {
                "from": "src/assets",
                "to": "assets"
            }
        ],
        "asarUnpack": [
            "**/preload.js",
            "**/*.node"
        ],
        "directories": {
            "output": "out"
        },
        "win": {
            "target": "nsis",
            "icon": "src/assets/images/company-icon.ico",
            "artifactName": "Dolphin.Enquiries.Setup.${version}.${ext}",
            "requestedExecutionLevel": "asInvoker"
        },
        "publish": {
            "provider": "github",
            "owner": "FarrellTechnology",
            "repo": "Dolphin-Enquiries"
        }
    },
    "devDependencies": {
        "@types/auto-launch": "^5.0.5",
        "@types/electron-store": "^1.3.1",
        "@types/he": "^1.2.3",
        "@types/node": "^22.15.21",
        "@types/node-schedule": "^2.1.7",
        "@types/nodemailer": "^6.4.17",
        "@types/ssh2-sftp-client": "^9.0.4",
        "electron": "^26.0.0",
        "electron-builder": "^26.0.12",
        "rimraf": "^6.0.1",
        "typescript": "^5.8.3"
    },
    "dependencies": {
        "auto-launch": "^5.0.6",
        "basic-ftp": "^5.0.5",
        "cronitor": "^2.5.1",
        "date-fns": "^4.1.0",
        "electron-store": "^8.2.0",
        "electron-updater": "^6.6.2",
        "fast-xml-parser": "^5.2.3",
        "he": "^1.2.0",
        "keytar": "^7.9.0",
        "node-schedule": "^2.1.1",
        "nodemailer": "^7.0.3",
        "p-limit": "^6.2.0",
        "snowflake-sdk": "^2.1.0",
        "ssh2-sftp-client": "^12.0.0"
    }
}
