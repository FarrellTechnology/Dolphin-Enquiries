{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ES2020",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "allowJs": true,  // Allows JSDoc to process JS generated from TS
    "checkJs": true    // You can also enable this if you want JSDoc to check JS files.
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
